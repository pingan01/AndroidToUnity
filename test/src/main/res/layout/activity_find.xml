<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.LingLing.SapientialTravel.FindActivity">

    <com.amap.api.maps.MapView
        android:id="@+id/findMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/titlebar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bt_style_back" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linear_search"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/ditu"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/edt_input"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/input" />

        <Button
            android:layout_width="180dp"
            android:layout_height="10dp"
            android:layout_below="@id/edt_input"
            android:layout_marginLeft="20dp"
            android:background="@drawable/keyword" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_search"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/bt_style_search" />
</RelativeLayout>